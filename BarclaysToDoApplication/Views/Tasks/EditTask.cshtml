@page
@model BarclaysToDoApplication.Views.Tasks.EditTaskModel
@{
    ViewData["Title"] = "Edit Task";
}

<h2>Edit Task</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Task.TaskName">Task Name:</label> <!-- Label for Task Name field -->
        <input asp-for="Task.TaskName" class="form-control" />
        <span asp-validation-for="Task.TaskName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Priority">Priority:</label> <!-- Label for Priority field -->
        <input asp-for="Task.Priority" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Task.Status">Status:</label> <!-- Label for Status field -->
        <input asp-for="Task.Status" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

