@page
@model BarclaysToDoApplication.Views.Tasks.CreateTaskModel
@{
    <h1>Create New Task</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="TaskName">Task Name:</label>
            <input asp-for="TaskName" class="form-control" />
            <span asp-validation-for="TaskName" class="text-danger"></span>

            <div class="form-group">
                <label for="priority">Priority:</label>
                <input type="number" min="1" max="5" id="priority" name="Priority" class="form-control" required>
                <span asp-validation-for="Task.Priority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Status">Status:</label>
                <select id="Status" name="Status" class="form-control" required>
                    <option value="notstarted">Not started</option>
                    <option value="inprogress">In Progress</option>
                    <option value="completed">Completed</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Task</button>
    </form>
}


